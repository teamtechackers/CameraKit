<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="styleHeadingTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mukta_bold</item>
    </style>

    <style name="styleTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/mukta_bold</item>
    </style>

    <style name="styleCardViewET">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="styleETV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/mukta_bold</item>
        <item name="android:textColorHint">@color/light</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="styleCardViewBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="styleBtnTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mukta_bold</item>
    </style>

    <style name="styleCardViewCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/light</item>
    </style>
    <!--    Category Styles-->
    <style name="styleCardViewRowView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/light</item>
    </style>
    <style name="styleCategoryLayout">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PreviewSpacer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="styleCategoryTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/mukta_regular</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="styleRowViewLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">195dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="styleProductPriceTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/mukta_bold</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>
    <style name="styleProductNameTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/mukta_bold</item>
    </style>
    <style name="styleProductDetailTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light</item>
        <item name="fontFamily">@font/mukta_semi_bold</item>
    </style>
</resources>