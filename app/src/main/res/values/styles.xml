<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleHeadingTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mukta_bold</item>
    </style>
    <style name="styleTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mukta_bold</item>
    </style>
    <style name="styleCardViewET">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="cardCornerRadius">20dp</item>
    </style>
    <style name="styleETV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/mukta_bold</item>
        <item name="android:textColorHint">@color/light</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@null</item>
    </style>
    <style name="styleCardViewBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="cardCornerRadius">10dp</item>
    </style>
    <style name="styleBtnTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mukta_bold</item>
    </style>
</resources>