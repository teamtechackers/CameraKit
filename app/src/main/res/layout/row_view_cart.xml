<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/styleCartCardView"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingLeft="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="115dp"
                android:layout_height="85dp"
                android:scaleType="fitXY"
                android:src="@drawable/cart_image" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                style="@style/styleProductNameTv"
                android:layout_alignParentTop="true"
                android:text="Canon Eos 90D" />

            <TextView
                style="@style/styleProductDetailTv"
                android:layout_below="@id/product_name"
                android:text="Sony alpha ILCE 6100" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    style="@style/styleProductPriceTv"
                    android:layout_alignParentLeft="true"
                    android:text="$96.85" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <include layout="@layout/add_sub_layout"/>
                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>